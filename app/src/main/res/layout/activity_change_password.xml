<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity">

    <RelativeLayout
        android:id="@+id/layout222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainprimary"
        android:elevation="20dp"
        >
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/beckbtn3"
            android:padding="14dp" />

        <TextView
            android:id="@+id/yoko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="14dp"
            android:text="New Password"
            android:textColor="@color/mainaccent"
            android:fontFamily="@font/jakarta"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout222"
        android:background="@color/mainaccent">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="48dp"
            android:text="Enter Password:"
            android:fontFamily="@font/jakarta"
            android:textSize="18dp"/>

    <EditText
        android:id="@+id/newPassEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/textView5"
        android:background="@drawable/edittextborder1"
        android:hint="At least 8 digits"
        android:inputType="textPassword" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:text="Re-enter new Password:"
            android:layout_below="@+id/newPassEt"
            android:fontFamily="@font/jakarta"
            android:textSize="18dp"/>

    <EditText
        android:id="@+id/confirmNewPassEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittextborder1"
        android:layout_below="@+id/textView6"
        android:inputType="textPassword"
        android:hint="********"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPassEt" />

    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmNewPassEt"
        android:background="@drawable/round_back_mainprimary"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:text="UPDATE"
        android:textColor="@color/mainaccent"
        android:textStyle="bold"
        android:fontFamily="@font/jakarta"/>
    </RelativeLayout>
</RelativeLayout>
