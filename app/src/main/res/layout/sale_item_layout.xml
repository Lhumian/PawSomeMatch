<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainsecondary">

    <RelativeLayout
        android:id="@+id/layout100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainprimary">

            <TextView
                android:id="@+id/petIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet ID: "
                android:textSize="16sp"
                android:layout_marginLeft="12dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/jakarta"
                android:textColor="@color/mainaccent"/>


            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyer's Phone Number: "
                android:textSize="12sp"
                android:layout_marginLeft="12dp"
                android:layout_below="@id/petIdTextView"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/jakarta"
                android:textColor="@color/mainaccent"/>

            <TextView
                android:id="@+id/buyerPhoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09610293211"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/tv"
                android:layout_below="@id/petIdTextView"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/jakarta"
                android:textColor="@color/mainaccent"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:background="@color/mainaccent"
            android:layout_marginTop="1dp">

            <ImageView
                android:id="@+id/map"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/map2"
                />

            <TextView
                android:id="@id/loc"
                android:layout_toRightOf="@id/map"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Address"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/jakarta"
                android:textColor="@color/mainprimary"/>

            <TextView
                android:id="@+id/cityTextView"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loc"
                android:text="City"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/jakarta"
                android:textColor="@color/mainsecondary"/>

            <TextView
                android:id="@+id/barangayTextView"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barangay"
                android:textSize="14sp"
                android:layout_below="@id/cityTextView"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jakarta"
                android:textColor="@color/mainsecondary"/>

            <TextView
                android:id="@+id/streetTextView"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street"
                android:textSize="14sp"
                android:layout_below="@id/barangayTextView"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/jakarta"
                android:textColor="@color/mainsecondary"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout3"
            android:background="@color/mainaccent"
            android:layout_marginTop="1dp">

            <ImageView
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/payment"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:id="@+id/idk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Price: "
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/payment"
                android:layout_marginTop="12dp"
                android:textSize="14sp"
                android:fontFamily="@font/jakarta"
                android:textColor="@color/mainprimary"/>

            <TextView
                android:id="@+id/petPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Price"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/payment"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/idk2"
                android:textSize="14sp"
                android:fontFamily="@font/jakarta"
                android:textColor="@color/mainprimary"/>


            <TextView
                android:id="@+id/textShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/jakarta"
                android:textColor="@color/mainsecondary"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/idk3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price:"
                android:textSize="14sp"
                android:layout_below="@id/petPriceTextView"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="12dp"
                android:fontFamily="@font/jakarta"
                android:textColor="@color/mainprimary"/>

            <TextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@id/idk3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="12dp"
                android:fontFamily="@font/jakarta"
                android:textColor="@color/mainprimary"/>

            <TextView
                android:id="@+id/idk1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Mode:"
                android:layout_marginLeft="8dp"
                android:layout_below="@id/petPriceTextView"
                android:layout_toRightOf="@id/payment"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/jakarta"
                android:textColor="@color/mainprimary"/>


            <TextView
                android:id="@+id/paymentModeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Mode"
                android:layout_below="@id/idk1"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/payment"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/jakarta"
                android:textColor="@color/mainprimary"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout4"
            android:background="@color/mainaccent"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/orderDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="Order Date"
                android:textSize="12dp"
                android:fontFamily="@font/jakarta"/>

            <TextView
                android:id="@+id/deliveryProgressTextView"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="Received"
                android:textSize="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/jakarta"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
