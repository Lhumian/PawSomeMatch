<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderSummaryActivity"
    android:background="@color/mainsecondary">


    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainprimary"
        android:elevation="20dp"
        android:layout_marginBottom="2dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/beckbtn3"
            android:padding="14dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/txtOrderSummaryDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="14dp"
            android:text="Order Summary"
            android:layout_centerVertical="true"
            android:textColor="@color/mainaccent"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:background="@color/mainprimary"
        >


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/receipt"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp">

        </ImageView>

        <TextView
            android:id="@+id/txtDeliveryProcessDisplay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/jakarta"
            android:text="Expected Delivery Process:"
            android:textColor="@color/mainaccent" />

        <TextView
            android:id="@+id/txtDeliveryProcessDisplay4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/txtDeliveryProcessDisplay2"
            android:fontFamily="@font/jakarta"
            android:textColor="@color/mainaccent"
            android:text="3 to 5 Days"
            />


        <TextView
            android:id="@+id/txtDeliveryProcessDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDeliveryProcessDisplay2"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/jakarta"
            android:text="Deliver Process:"
            android:textColor="@color/mainaccent"/>

        <TextView
            android:id="@+id/txtDeliveryProcess1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="On Progress"
            android:layout_toRightOf="@+id/txtDeliveryProcessDisplay"
            android:fontFamily="@font/jakarta"
            android:textColor="@color/mainaccent"
            android:layout_below="@+id/txtDeliveryProcessDisplay2"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:background="@color/mainaccent"
        android:layout_marginTop="2dp"
        >

        <TextView
            android:id="@+id/txtSellerDisplay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="Seller:"
            android:textStyle="bold"
            android:textColor="@color/mainprimary"
            android:fontFamily="@font/jakarta"
            />

        <TextView
            android:id="@+id/txtSeller1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:text="Gerald Espadilla"
            android:textStyle="bold"
            android:textColor="@color/mainprimary"
            android:fontFamily="@font/jakarta"
            android:layout_toRightOf="@id/txtSellerDisplay1"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout9"
        android:background="@color/mainaccent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">


        <TextView
            android:id="@+id/txtPetInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Pet Information:"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/mainprimary"
            android:fontFamily="@font/jakarta"/>



        <TextView
            android:id="@+id/txtPetNameDisplay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Pet Name:"
            android:textColor="@color/mainsecondary"
            android:layout_below="@+id/txtPetInformation"
            />

        <TextView
            android:id="@+id/txtPetName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:text="Pet Name:"
            android:textColor="@color/mainsecondary"
            android:layout_below="@+id/txtPetInformation"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/txtPetCategoryDisplay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Pet Category:"
            android:textColor="@color/mainsecondary"
            android:layout_below="@+id/txtPetNameDisplay1"
            />

        <TextView
            android:id="@+id/txtPetCategory1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:text="Pet Category:"
            android:textColor="@color/mainsecondary"
            android:layout_below="@+id/txtPetNameDisplay1"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/txtPetBreedDisplay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Pet Breed:"
            android:textColor="@color/mainsecondary"
            android:layout_below="@+id/txtPetCategoryDisplay1"
            />

        <TextView
            android:id="@+id/txtPetBreed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:text="Pet Breed:"
            android:textColor="@color/mainsecondary"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtPetCategoryDisplay1"
            />

        <TextView
            android:id="@+id/txtPetColorDisplay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Pet Color:"
            android:textColor="@color/mainsecondary"
            android:layout_below="@+id/txtPetBreedDisplay1"
            />

        <TextView
            android:id="@+id/txtPetColor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="Pet Color:"
            android:textColor="@color/mainsecondary"
            android:layout_marginTop="12dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtPetBreedDisplay1"
            android:layout_marginBottom="12dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout3"
        android:background="@color/mainaccent"
        android:layout_marginBottom="2dp"
        >

        <ImageView
            android:id="@+id/shield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shield"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp">

        </ImageView>


        <TextView
            android:id="@+id/txtPaymentMode1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/shield"
            android:fontFamily="@font/jakarta"
            android:text="Payment Method:"
            android:textColor="@color/mainprimary"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPaymentModeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_toRightOf="@+id/shield"
            android:text="Cash On Delivery / Gcash"
            android:textColor="@color/mainprimary"
            android:textStyle="italic"
            android:layout_below="@+id/txtPaymentMode1"
            />




        <TextView
            android:id="@+id/txtOrderDateDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="Order Date:"
            android:textColor="@color/mainsecondary"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtPaymentModeDisplay"
            />

        <TextView
            android:id="@+id/txtOrderDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Date:"
            android:textColor="@color/mainsecondary"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@+id/shield"
            android:layout_marginStart="12dp"
            android:layout_below="@+id/txtPaymentModeDisplay"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout5"
        android:background="@color/mainaccent"
        >


        <TextView
            android:id="@+id/txtPaymentDetails1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Payment Details:"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/mainprimary"
            android:fontFamily="@font/jakarta" />

        <TextView
            android:id="@+id/txtReferenceDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Reference Number:"
            android:textColor="@color/mainsecondary"
            android:layout_below="@+id/txtPaymentDetails1"
            />

        <TextView
            android:id="@+id/txtReference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:text="Reference"
            android:textColor="@color/mainsecondary"
            android:layout_below="@+id/txtPaymentDetails1"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/txtPetPriceDisplay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Pet Price:"
            android:textColor="@color/mainsecondary"
            android:layout_below="@+id/txtReferenceDisplay"
            />

        <TextView
            android:id="@+id/txtPetPrice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:text="Pet Price:"
            android:textColor="@color/mainsecondary"
            android:layout_below="@+id/txtReferenceDisplay"
            android:layout_alignParentRight="true"
            />


        <TextView
            android:id="@+id/txtTotalPaymentDisplay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="Total Payment:"
            android:textColor="@color/mainsecondary"
            android:layout_below="@+id/txtPetPriceDisplay1"
            />

        <TextView
            android:id="@+id/txtTotalPayment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:text="Total Payment:"
            android:textColor="@color/mainsecondary"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtPetPriceDisplay1"
            />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Confirm"
            android:textStyle="bold"
            android:textColor="@color/mainaccent"
            android:elevation="12dp"
            android:layout_below="@+id/txtTotalPayment1"
            android:background="@drawable/round_back_main"
            />

    </RelativeLayout>

</RelativeLayout>