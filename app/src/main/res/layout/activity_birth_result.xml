<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainaccent"
    tools:context=".BirthResultActivity">

    <RelativeLayout
        android:id="@+id/layout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainprimary"
        android:layout_marginBottom="2dp"
        android:elevation="20dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/beckbtn3"
            android:padding="14dp" />

        <TextView
            android:id="@+id/txtOrderSummaryDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birth Status"
            android:textColor="@color/mainaccent"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:fontFamily="@font/jakarta"
            android:textSize="16dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/layout0001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout01">

        <ImageView
            android:id="@+id/statusg"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/statusg" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/layout0001">



        <ImageView
            android:id="@+id/maleicon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/maleicon1"
            android:padding="20dp" />

        <TextView
            android:id="@+id/totalMalePetsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Male Pets: "
            android:layout_toRightOf="@+id/maleicon"
            android:layout_centerVertical="true"
            android:textSize="22dp"
            android:fontFamily="@font/jakarta"
            android:textStyle="bold"
            android:textColor="@color/mainsecondary"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp">

        <ImageView
            android:id="@+id/femaleicon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/femaleicon1"
            android:padding="20dp" />


        <TextView
            android:id="@+id/totalFemalePetsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Female Pets: "
            android:layout_toRightOf="@+id/femaleicon"
            android:layout_centerVertical="true"
            android:textSize="22dp"
            android:fontFamily="@font/jakarta"
            android:textStyle="bold"
            android:textColor="@color/mainsecondary"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp">

        <ImageView
            android:id="@+id/totalicon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/totalicon"
            android:padding="14dp" />

        <TextView
            android:id="@+id/totalPetsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Pets: "
            android:layout_toRightOf="@+id/totalicon"
            android:layout_centerVertical="true"
            android:textSize="22dp"
            android:fontFamily="@font/jakarta"
            android:textStyle="bold"
            android:textColor="@color/mainsecondary"/>

    </RelativeLayout>


</RelativeLayout>
