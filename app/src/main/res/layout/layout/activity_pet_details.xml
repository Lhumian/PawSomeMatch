<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainaccent"
    tools:context=".PetDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/layoutgerald">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imgPhoto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/learn2" />

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/beckbtn"
                android:padding="14dp" />

            <ImageView
                android:id="@+id/btnUploadPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:padding="14dp"
                android:src="@drawable/savebtn" />

        </RelativeLayout>
    </RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/layoutgerald"
    android:background="@color/mainsecondary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/matchingbg">

        <LinearLayout
            android:id="@+id/we"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/petdetails"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="24dp">
                </ImageView>

                    <ImageView
                        android:id="@+id/btnUploadCertification"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/certificate"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"/>


                    <ImageView
                        android:id="@+id/btnUploadVaccine"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/vaccine"
                        android:layout_toLeftOf="@+id/btnUploadCertification"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"/>

                     <ImageView
                        android:id="@+id/btndesc"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/desc"
                        android:layout_toLeftOf="@+id/btnUploadVaccine"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"/>

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_below="@id/we"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:text="ID:"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtpetname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:hint="Hunter"
                android:textColorHint="@color/mainaccent"
                android:textColor="@color/mainaccent"
                android:fontFamily="@font/jakarta"
                android:textSize="28dp"
                android:textStyle="bold" />


            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_below="@+id/txtpetname"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/txtbreed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:hint="Askal"
                android:layout_alignParentBottom="true"
                android:textColorHint="@color/mainaccent"
                android:textColor="@color/mainaccent"
                android:fontFamily="@font/jakarta"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtbreed"
                android:hint="brown"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:textColorHint="@color/mainaccent"
                android:textColor="@color/mainaccent"
                android:fontFamily="@font/jakarta"
                android:textSize="16dp" />



                </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout2">



                <TextView
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:textColorHint="@color/mainaccent"
                    android:textColor="@color/mainaccent"
                    android:fontFamily="@font/jakarta"
                    android:lineSpacingMultiplier="1.5"
                    android:lineSpacingExtra="0dp"
                    android:textAlignment="textStart"
                    android:textSize="12dp"/>

            </RelativeLayout>


        </RelativeLayout>


        </RelativeLayout>
</RelativeLayout>
</RelativeLayout>