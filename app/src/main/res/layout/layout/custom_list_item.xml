<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <RelativeLayout
        android:name="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgPhoto"
            android:layout_marginBottom="10dp"
            android:src="@drawable/learn1"
            android:background="@drawable/img_circular"
            android:scaleType="centerCrop"/>



        <TextView
            android:layout_toRightOf="@+id/imgPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:id="@+id/txt_petname"
            android:textSize="18sp"
            android:text="Pet Name"
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            android:textColor="@color/mainsecondary"
            android:fontFamily="@font/jakarta"/>



        <TextView
            android:layout_toRightOf="@+id/imgPhoto"
            android:layout_below="@+id/txt_petname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:id="@+id/txt_breed"
            android:textSize="16sp"
            android:text="Breed"
            android:textColor="@color/mainsecondary"
            android:fontFamily="@font/jakarta"/>

    </RelativeLayout>


</RelativeLayout>