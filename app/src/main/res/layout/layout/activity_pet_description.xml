<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetDescription">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/mainprimary">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/beckbtn"
            android:padding="14dp" />

        <TextView
            android:id="@+id/txtbreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Description"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/mainaccent"
            android:textColor="@color/mainaccent"
            android:fontFamily="@font/jakarta"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnSaveDescription"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Post"
            android:textSize="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:textColor="@color/mainaccent"
            android:background="@color/mainsecondary"
            ></Button>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout1"
        android:background="@color/mainprimary">

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="24dp"
            android:hint="Enter your Pet Detail"
            android:textColorHint="@color/mainaccent"
            android:textColor="@color/mainaccent"
            android:textSize="14dp"
            android:fontFamily="@font/jakarta"
            android:lineSpacingMultiplier="1.5"
            android:lineSpacingExtra="0dp"
            android:textAlignment="textStart" />


    </RelativeLayout>

</RelativeLayout>