<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/mainaccent"
    tools:context="com.petopia.loginsignup.PetSellingF">


    <RelativeLayout
        android:id="@+id/pawsomenav"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/jakarta"
            android:text="pet pound"
            android:textColor="@color/mainsecondary"
            android:layout_marginTop="12dp"
            android:textSize="18dp">
        </TextView>

    </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/pawsomenav">

                <TextView
                    android:id="@+id/xd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jakarta"
                    android:text="Your Posts"
                    android:textColor="@color/mainsecondary"
                    android:textSize="18dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold">
                </TextView>


                    <ImageView
                        android:id="@+id/btn_browse"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="36dp"
                        android:src="@drawable/browsepet">
                    </ImageView>


            </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainaccent"
        android:layout_below="@+id/layout1">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="20dp"
            android:background="@color/mainaccent">

            <ListView
                android:id="@+id/selling_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mainaccent"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="12dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/addpet"
                    android:id="@+id/btn_post"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
