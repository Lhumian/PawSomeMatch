<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatusActivity"
    android:background="@color/mainaccent">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainprimary"
        android:layout_marginBottom="2dp"
        android:elevation="20dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/beckbtn3"
            android:padding="14dp" />

        <TextView
            android:id="@+id/txtOrderSummaryDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Pet Status"
            android:textColor="@color/mainaccent"
            android:fontFamily="@font/jakarta"
            android:textSize="16dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:background="@color/mainaccent">

        <ImageView
            android:id="@+id/statusg2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/hamster333" />


        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jakarta"
            android:text="Status:"
            android:textStyle="bold"
            android:layout_marginTop="58dp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/mainsecondary"/>

        <!-- Spinner for Status -->
        <Spinner
            android:id="@+id/statusSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statusg2"
            android:fontFamily="@font/jakarta"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="24dp"
            android:entries="@array/status"
            android:textColor="@color/mainsecondary"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:background="@color/mainaccent">


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout3"
        android:background="@color/mainaccent">
        <TextView
            android:id="@+id/healthConditionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Condition:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="@color/mainsecondary"
            android:fontFamily="@font/jakarta"
            android:layout_marginLeft="12dp"/>

        <!-- Spinner for Health Condition -->
        <Spinner
            android:id="@+id/healthConditionSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="24dp"
            android:layout_below="@+id/healthConditionTextView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/mainsecondary"
            android:fontFamily="@font/jakarta"
            android:entries="@array/health"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout4"
        android:background="@color/mainaccent">
        <TextView
            android:id="@+id/stateConditionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State Condition:"
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            android:textColor="@color/mainsecondary"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/jakarta"/>

        <!-- EditText for State Condition -->
        <EditText
            android:id="@+id/stateConditionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="24dp"
            android:layout_below="@+id/stateConditionTextView"
            android:layout_marginLeft="12dp"
            android:textColor="@color/mainsecondary"
            android:fontFamily="@font/jakarta"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout5"
        android:background="@color/mainaccent">
        <TextView
            android:id="@+id/PregnancyProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pregnancy Progress:"
            android:textStyle="bold"
            android:textColor="@color/mainsecondary"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/jakarta"/>

        <Spinner
            android:id="@+id/PregnancyProgressEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="24dp"
            android:layout_below="@+id/PregnancyProgress"
            android:layout_alignParentStart="true"
            android:textColor="@color/mainsecondary"
            android:layout_alignParentEnd="true"
            android:entries="@array/progress"
            android:fontFamily="@font/jakarta"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout6">

        <Button
            android:id="@+id/updateStatusButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mainaccent"
            android:text="Update Status"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/round_back_main"
            android:fontFamily="@font/jakarta"/>

        <Button
            android:id="@+id/birthStatusButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/updateStatusButton"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/round_back_main"
            android:fontFamily="@font/jakarta"
            android:text="Add Total Offsping"
            android:textColor="@color/mainaccent" />
    </RelativeLayout>


</RelativeLayout>
