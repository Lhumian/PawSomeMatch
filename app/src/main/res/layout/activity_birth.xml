<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BirthActivity"
    android:background="@color/mainprimary">

    <RelativeLayout
        android:id="@+id/layout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainprimary"
        android:elevation="20dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/beckbtn3"
            android:padding="14dp" />

        <TextView
            android:id="@+id/txtOrderSummaryDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="14dp"
            android:text="Birth Status"
            android:textColor="@color/mainaccent"
            android:layout_centerVertical="true"
            android:fontFamily="@font/jakarta"
            android:textSize="16dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout01"
        android:background="@color/mainaccent"
        >



        <ImageView
            android:id="@+id/statusg3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/rabbit3" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:layout_centerVertical="true"
            android:text="Birth Result:"
            android:textSize="20sp"
            android:textColor="@color/mainsecondary"
            android:fontFamily="@font/jakarta"
            android:textStyle="bold"/>






    </RelativeLayout>

    <RelativeLayout
        android:id="@id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:background="@color/mainaccent">

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="Total Offspring:"
            android:textSize="18dp"
            android:textColor="@color/mainsecondary"
            android:fontFamily="@font/jakarta"/>

        <EditText
            android:id="@+id/totalBirth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/clean_border2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="number"
            android:layout_below="@+id/txtTotal"
            android:textColor="@color/mainsecondary"
            android:fontFamily="@font/jakarta"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:background="@color/mainaccent">

        <TextView
            android:id="@+id/txtMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="Total Male:"
            android:textSize="18dp"
            android:textColor="@color/mainsecondary"
            android:fontFamily="@font/jakarta"/>




        <EditText
            android:id="@+id/totalMale"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/clean_border2"
            android:layout_marginBottom="12dp"
            android:inputType="number"
            android:layout_below="@+id/txtMale"
            android:textColor="@color/mainsecondary"
            android:fontFamily="@font/jakarta"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout3"
        android:background="@color/mainaccent">


        <TextView
            android:id="@+id/txtFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="Total Female:"
            android:textSize="18dp"
            android:textColor="@color/mainsecondary"
            android:fontFamily="@font/jakarta"/>


        <EditText
            android:id="@+id/totalFemale"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/clean_border2"
            android:inputType="number"
            android:layout_below="@+id/txtFemale"
            android:textColor="@color/mainsecondary"
            android:fontFamily="@font/jakarta"/>


    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout4"
        android:background="@color/mainaccent">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:text="Submit"
            android:background="@drawable/round_back_main"
            android:textColor="@color/mainaccent"
            android:fontFamily="@font/jakarta"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />


    </RelativeLayout>


</RelativeLayout>
