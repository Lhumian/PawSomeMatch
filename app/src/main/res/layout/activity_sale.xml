<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainaccent"
    tools:context=".SaleActivity">


    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainprimary"
        android:elevation="20dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/beckbtn3"
            android:padding="14dp"
            />

        <TextView
            android:id="@+id/finddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="My Sales"
            android:textColor="@color/mainaccent"
            android:textSize="16sp"
            android:fontFamily="@font/jakarta"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btnSellerTransactions"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Seller Transactions">

        </Button>

    </RelativeLayout>

    <TextView
        android:id="@+id/noPetSaleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO PET SALE"
        android:textStyle="bold"
        android:fontFamily="@font/jakarta"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


    <ListView
        android:id="@+id/saleListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"/>


</RelativeLayout>