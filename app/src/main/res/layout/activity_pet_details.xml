<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainaccent"
    tools:context=".PetDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/layoutgerald">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgPhoto"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample2" />

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/beckbtn"
                android:padding="14dp" />

            <ImageView
                android:id="@+id/btnUploadPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:padding="14dp"
                android:src="@drawable/savebtn" />

        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutgerald"
        android:background="@color/mainaccent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/matchingbg1">

            <LinearLayout
                android:id="@+id/we"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </RelativeLayout>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_below="@id/we"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="25dp"
                        android:src="@drawable/petdettxt"
                        android:layout_alignParentRight="true"/>


                    <TextView
                        android:id="@+id/txtid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:text="ID:"
                        android:visibility="invisible"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtpetname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="12dp"
                        android:hint="Hunter"
                        android:textColorHint="@color/mainsecondary"
                        android:textColor="@color/mainsecondary"
                        android:fontFamily="@font/jakarta"
                        android:textSize="28dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txtbreed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="24dp"
                        android:hint="Askal"
                        android:textColorHint="@color/mainsecondary"
                        android:textColor="@color/mainsecondary"
                        android:fontFamily="@font/jakarta"
                        android:textSize="18dp"
                        android:layout_below="@+id/txtpetname"/>


                    <TextView
                        android:id="@+id/txtagetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtpetname"
                        android:hint="Date of Birth: "
                        android:layout_toLeftOf="@+id/txtage"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="13dp"
                        android:textColorHint="@color/mainprimary"
                        android:textColor="@color/mainprimary"
                        android:fontFamily="@font/jakarta"
                        android:textSize="12dp" />



                    <TextView
                        android:id="@+id/txtage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Age"
                        android:layout_below="@+id/txtpetname"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="24dp"
                        android:textColorHint="@color/mainsecondary"
                        android:textColor="@color/mainsecondary"
                        android:fontFamily="@font/jakarta"
                        android:textSize="12dp"
                        android:layout_alignParentRight="true"/>




                    <LinearLayout
                        android:id="@+id/layout2"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_below="@+id/txtbreed">


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="53dp"
                            android:layout_weight="1"
                            android:background="@drawable/petdetbg"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="6dp"
                            android:elevation="5dp"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/txtgendertxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:hint="Gender"
                                android:layout_marginTop="8dp"
                                android:textColorHint="@color/mainprimary"
                                android:textColor="@color/mainprimary"
                                android:fontFamily="@font/jakarta"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/txtgender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Gender"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:gravity="center_horizontal"
                                android:textColorHint="@color/mainsecondary"
                                android:textColor="@color/mainsecondary"
                                android:fontFamily="@font/jakarta"
                                android:textSize="12dp"
                                android:layout_below="@+id/txtgendertxt"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="53dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/petdetbg"
                            android:gravity="center_horizontal"
                            android:elevation="5dp">

                            <TextView
                                android:id="@+id/txtweighttxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:hint="Weight"
                                android:layout_marginTop="8dp"
                                android:textColorHint="@color/mainprimary"
                                android:textColor="@color/mainprimary"
                                android:fontFamily="@font/jakarta"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/txtweight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Weight"
                                android:gravity="center_horizontal"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:textColorHint="@color/mainsecondary"
                                android:textColor="@color/mainsecondary"
                                android:fontFamily="@font/jakarta"
                                android:textSize="12dp"
                                android:layout_below="@+id/txtweighttxt"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="53dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/petdetbg"
                            android:elevation="5dp"
                            android:gravity="center_horizontal">


                            <TextView
                                android:id="@+id/txtspeciestxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:hint="Species"
                                android:layout_marginTop="8dp"
                                android:textColorHint="@color/mainprimary"
                                android:textColor="@color/mainprimary"
                                android:fontFamily="@font/jakarta"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/txtspecies"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Species"
                                android:gravity="center_horizontal"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:textColorHint="@color/mainsecondary"
                                android:textColor="@color/mainsecondary"
                                android:fontFamily="@font/jakarta"
                                android:textSize="12dp"
                                android:layout_below="@+id/txtspeciestxt"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="53dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/petdetbg"
                            android:elevation="5dp"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/txtcolortxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Color"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:textColorHint="@color/mainprimary"
                                android:textColor="@color/mainprimary"
                                android:fontFamily="@font/jakarta"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/txtcolor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Color"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="2dp"
                                android:textColorHint="@color/mainsecondary"
                                android:textColor="@color/mainsecondary"
                                android:fontFamily="@font/jakarta"
                                android:textSize="12dp"
                                android:layout_below="@+id/txtcolortxt"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/layout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout2">

                        <TextView
                            android:id="@+id/etDescriptiontxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="About me"
                            android:layout_marginTop="14dp"
                            android:layout_marginLeft="24dp"
                            android:textColorHint="@color/mainsecondary"
                            android:textColor="@color/mainsecondary"
                            android:fontFamily="@font/jakarta"
                            android:textAlignment="textStart"
                            android:textSize="18dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Description"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginBottom="12dp"
                            android:textColorHint="@color/mainsecondary"
                            android:textColor="@color/mainsecondary"
                            android:fontFamily="@font/jakarta"
                            android:lineSpacingMultiplier="1.5"
                            android:lineSpacingExtra="0dp"
                            android:textAlignment="textStart"
                            android:textSize="12dp"
                            android:layout_below="@+id/etDescriptiontxt"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout33"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout3"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_marginLeft="24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add more pet info"
                            android:textColorHint="@color/mainsecondary"
                            android:textColor="@color/mainsecondary"
                            android:fontFamily="@font/jakarta"
                            android:textSize="18dp"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/layout4"
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:orientation="horizontal"
                        android:layout_below="@+id/layout33">


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:background="@drawable/petg1"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="6dp"
                            android:elevation="5dp"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/btnParent"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/qped" />



                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/petg2"
                            android:gravity="center_horizontal"
                            android:elevation="5dp">

                            <ImageView
                                android:id="@+id/btnUploadVaccine"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/qvac" />



                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/petg3"
                            android:elevation="5dp"
                            android:gravity="center_horizontal">


                            <ImageView
                                android:id="@+id/btndesc"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/qdesc" />



                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/petg4"
                            android:elevation="5dp"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/btnUploadCertification"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/qcert" />


                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>